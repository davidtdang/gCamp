<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="form-group">
  <%= f.label :first_name, class: "col-sm-2"%>
  <div class="col-sm-5">
    <%= f.text_field :first_name, class:"form-control", id:"first_name" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :last_name, class: "col-sm-2"%>
  <div class="col-sm-5">
    <%= f.text_field :last_name, class:"form-control", id:"last_name" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: "col-sm-2"%>
  <div class="col-sm-5">
    <%= f.text_field :email, class:"form-control", id:"email" %>
  </div>
</div>

<div class="form-group">
  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class:"btn btn-info" %>
      <%= link_to "Cancel", @usersreturnpath, class: "btn btn-default" %>
    </div>
  </div>
</div>



<% end %>
