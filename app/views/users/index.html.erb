<% if notice %>
<div class="alert alert-success" role="alert">
  <div style="text-align: center">
    <p id="flash"><%= notice %></p>
  </div>
</div>
<% end %>


<div class= "page-header">
  <div class= "pull-right">
    <%= link_to "New User", new_user_path, class: "btn btn-info"%>
  </div>
  <h1>Users</h1>
</div>

<table class= "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.first_name, user_path(user) %> <%= link_to user.last_name, user_path(user) %></td>
        <td><%= mail_to user.email %></td>
        <td>
          <div class= "pull-right">
            <%= link_to 'Edit', edit_user_path(user)%>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>
