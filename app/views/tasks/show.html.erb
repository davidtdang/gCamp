<% if notice %>
<div class="alert alert-success" role="alert">
  <div style="text-align: center">
    <p id="flash"><%= notice %></p>
  </div>
</div>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Completed:</strong>
  <%= @task.completed %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @task.due_date %>
</p>


<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
