<%= form_for @task, html: {class: "form-horizontal"} do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-1 control-label"%>
    <div class="col-sm-5">
      <%= f.text_field :description, class:"form-control", id:"description" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :due_date, class: "col-sm-1 control-label"%>
    <div class="col-sm-2">
      <%= f.date_field :due_date, class:"form-control", id:"due_date" %>
    </div>
  </div>

  <% if params[:action] == "edit" %>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-11">
          <%= f.check_box :completed, id:"completed" %>
          <%= f.label :completed %>

        </div>
      </div>
  <% end %>


  <div class="form-group">
  <div class="actions">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class:"btn btn-info" %>
      <%= link_to "Cancel", @returnpath, class: "btn btn-default" %>
    </div>
  </div>
</div>


<% end %>
