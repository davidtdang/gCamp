<%= form_for @task, html: {class: "form-horizontal"} do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <div class="row">
        <div class="col-sm-1"></div>
      <div class="alert alert-danger col-sm-5 col-md-6" role="alert">
        <strong><p><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:<p></strong>

        <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
        <div class="col-xs-6 col-md-4"></div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-1 control-label"%>
    <div class="col-sm-5">
      <%= f.text_field :description, class:"form-control", id:"description" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :due_date, class: "col-sm-1 control-label"%>
    <div class="col-sm-2">
      <%= f.date_field :due_date, class:"form-control", id:"due_date" %>
    </div>
  </div>

  <% if params[:action] == "edit" %>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-11">
          <%= f.check_box :completed, id:"completed" %>
          <%= f.label :completed %>

        </div>
      </div>
  <% end %>


  <div class="form-group">
  <div class="actions">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class:"btn btn-info" %>
      <%= link_to "Cancel", @returnpath, class: "btn btn-default" %>
    </div>
  </div>
</div>


<% end %>
