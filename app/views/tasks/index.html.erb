<div class= "page-header">
  <div class= "pull-right">
  <%= link_to "All", @Tasks%> |
  <%= link_to "Incomplete", (filter_params({completed: false})) %>
  <%= link_to "New Task", new_task_path, class: "btn btn-info"%>
</div>
<h1>Tasks</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.completed %></td>
        <td><%= task.due_date %></td>
        <td>
          <div class= "pull-right">
            <%= link_to 'Show', task, class: "btn btn-success"%>
            <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info"%>
            <%= link_to 'Delete', task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"%>
          </div>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>
</table>
