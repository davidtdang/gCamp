<div class= "page-header">
  <%= link_to "New Task", new_task_path, class: "btn btn-info pull-right"%>
  <h1>Tasks</h1>

</div>

<table>
  <thead>
    <table class="table">
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
          <td>
          <div class= "pull-right">
            <%= link_to 'Show', task, class: "btn btn-success"%>
            <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info"%>
            <%= link_to 'Delete', task, method: :delete, data: { confirm: true }, class: "btn btn-danger"%>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</table>
