<%= form_for @project, html: {class: "form-horizontal"} do |f| %>

<div class= "page-header">
  <h1>Edit Project</h1>
</div>

<% if @project.errors.any? %>
<div id="error_explanation">
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="alert alert-danger col-sm-5 col-md-6" role="alert">
      <strong><p><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:<p></strong>

        <ul>
          <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        <div class="col-xs-6 col-md-4"></div>
      </div>
    </div>
  </div>
  <% end %>

<% if notice %>
<div class="alert alert-success" role="alert">
  <div style="text-align: center">
    <p id="flash"><%= notice %></p>
  </div>
</div>
<% end %>



<div class="form-group">
  <%= f.label :name, class: "col-sm-1 control-label"%>
  <div class="col-sm-5">
    <%= f.text_field :name, class:"form-control", id:"name" %>
  </div>
</div>


<div class="form-group">
  <div class="actions">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class: "btn btn-info" %>
      <%= link_to "Cancel", @projectsreturnpath, class: "btn btn-default" %>
    </div>
  </div>




<% end %>
